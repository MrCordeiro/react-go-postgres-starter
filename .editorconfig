# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[*.{py,rst,ini}]
indent_style = space
indent_size = 4

# Docstrings and comments use max_line_length = 79
[*.py]
max_line_length = 88

[*.{html,css,scss,json,yml,xml,js}]
indent_style = space
indent_size = 2

# Minified JavaScript files shouldn't be changed
[**.min.js]
indent_style = ignore
insert_final_newline = ignore

[*.md]
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[default.conf]
indent_style = space
indent_size = 2
